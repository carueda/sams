<!--
	Installer shortcut specification 
	Carlos A. Rueda
	$Id$
-->
<shortcuts>
  <programGroup defaultName="SAMS" location="applications"/>
  <shortcut
     name="SAMS"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\bin\sams.bat"
     commandLine=""
     description="Launch the Spectral Analysis and Management System"
     initialState="noShow">
     <createForPack name="System"/>
   </shortcut>

   <shortcut
     name="Uninstall SAMS"
     programGroup="yes"
     desktop="no"
     applications="no"
     startMenu="no"
     startup="no"
     target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
     commandLine=""
     description="SAMS uninstaller">
     <createForPack name="System" />
   </shortcut>
   
</shortcuts>
